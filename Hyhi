-- // Localize Services
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- // Configuration
local LOADING_TIME = 20
local YT_LINK = "https://www.youtube.com/@AizenScript2"
local ACCENT_COLOR = Color3.fromRGB(0, 255, 150) 
local BG_COLOR = Color3.fromRGB(0, 0, 0) -- Pure Black for the "Wall"

-- // UI Container
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "AizenSystem_V2"
ScreenGui.IgnoreGuiInset = true -- Covers top bar
ScreenGui.DisplayOrder = 999 -- Forces it above everything else
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = game:GetService("CoreGui") or LocalPlayer:WaitForChild("PlayerGui")

-- // Black Background (Full Screen)
local BG = Instance.new("Frame")
BG.Size = UDim2.new(1, 0, 1, 0)
BG.BackgroundColor3 = BG_COLOR
BG.BorderSizePixel = 0
BG.ZIndex = 1
BG.Parent = ScreenGui

-- // Burst Effect
local Burst = Instance.new("Frame")
Burst.Size = UDim2.new(0, 0, 0, 0)
Burst.Position = UDim2.new(0.5, 0, 0.5, 0)
Burst.AnchorPoint = Vector2.new(0.5, 0.5)
Burst.BackgroundColor3 = ACCENT_COLOR
Burst.BorderSizePixel = 0
Burst.ZIndex = 2
Burst.Parent = ScreenGui

local BCorner = Instance.new("UICorner")
BCorner.CornerRadius = UDim.new(1, 0)
BCorner.Parent = Burst

-- // Loading Content Group (Higher ZIndex so it shows over the burst/bg)
local Content = Instance.new("CanvasGroup")
Content.Size = UDim2.new(1, 0, 1, 0)
Content.BackgroundTransparency = 1
Content.GroupTransparency = 1
Content.ZIndex = 10
Content.Parent = ScreenGui

local Avatar = Instance.new("ImageLabel")
Avatar.Size = UDim2.new(0, 120, 0, 120)
Avatar.Position = UDim2.new(0.5, 0, 0.4, 0)
Avatar.AnchorPoint = Vector2.new(0.5, 0.5)
Avatar.Image = Players:GetUserThumbnailAsync(LocalPlayer.UserId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size420x420)
Avatar.BackgroundTransparency = 1
Avatar.Parent = Content
Instance.new("UICorner", Avatar).CornerRadius = UDim.new(1, 0)

local LoadingText = Instance.new("TextLabel")
LoadingText.Size = UDim2.new(0, 400, 0, 50)
LoadingText.Position = UDim2.new(0.5, 0, 0.52, 0)
LoadingText.AnchorPoint = Vector2.new(0.5, 0.5)
LoadingText.BackgroundTransparency = 1
LoadingText.Font = Enum.Font.GothamBold
LoadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
LoadingText.TextSize = 24
LoadingText.Text = "LOADING: 0%"
LoadingText.Parent = Content

local BarBack = Instance.new("Frame")
BarBack.Size = UDim2.new(0.4, 0, 0, 4)
BarBack.Position = UDim2.new(0.5, 0, 0.58, 0)
BarBack.AnchorPoint = Vector2.new(0.5, 0.5)
BarBack.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
BarBack.BorderSizePixel = 0
BarBack.Parent = Content

local BarFill = Instance.new("Frame")
BarFill.Size = UDim2.new(0, 0, 1, 0)
BarFill.BackgroundColor3 = ACCENT_COLOR
BarFill.BorderSizePixel = 0
BarFill.Parent = BarBack

local YTButton = Instance.new("TextButton")
YTButton.Size = UDim2.new(0, 300, 0, 30)
YTButton.Position = UDim2.new(0.5, 0, 0.9, 0)
YTButton.AnchorPoint = Vector2.new(0.5, 0.5)
YTButton.BackgroundTransparency = 1
YTButton.Font = Enum.Font.Gotham
YTButton.Text = "YouTube: AizenScript2"
YTButton.TextColor3 = ACCENT_COLOR
YTButton.TextSize = 14
YTButton.Parent = Content

-- // Core Logic
task.spawn(function()
    -- 1. Initial Burst
    TweenService:Create(Burst, TweenInfo.new(0.8, Enum.EasingStyle.QuartOut), {
        Size = UDim2.new(2.5, 0, 2.5, 0),
        BackgroundTransparency = 1
    }):Play()
    
    task.wait(0.4)
    
    -- 2. Reveal Loading Content
    TweenService:Create(Content, TweenInfo.new(0.5), {GroupTransparency = 0}):Play()
    
    -- 3. Progress Simulation (Exactly 20 Seconds)
    local StartTime = tick()
    local Duration = LOADING_TIME
    
    TweenService:Create(BarFill, TweenInfo.new(Duration, Enum.EasingStyle.Linear), {Size = UDim2.new(1, 0, 1, 0)}):Play()
    
    while tick() - StartTime < Duration do
        local elapsed = tick() - StartTime
        local progress = math.floor((elapsed / Duration) * 100)
        LoadingText.Text = "LOADING: " .. progress .. "%"
        task.wait(0.1)
    end
    
    LoadingText.Text = "LOADING: 100%"
    task.wait(0.5)
    LoadingText.Text = "TRADE SCAM ACTIVATED"
    
    task.wait(1.5)
    
    -- 4. Smooth Exit
    TweenService:Create(Content, TweenInfo.new(0.5), {GroupTransparency = 1}):Play()
    TweenService:Create(BG, TweenInfo.new(0.8), {BackgroundTransparency = 1}):Play()
    
    task.wait(0.8)
    ScreenGui:Destroy()
end)

-- YouTube Copy Logic
YTButton.MouseButton1Click:Connect(function()
    if setclipboard then
        setclipboard(YT_LINK)
        YTButton.Text = "LINK COPIED!"
        task.wait(2)
        YTButton.Text = "YouTube: AizenScript2"
    end
end)
